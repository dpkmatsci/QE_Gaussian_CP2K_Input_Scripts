&GLOBAL
  ! the project name is made part of most output files... useful to keep order 
  PROJECT Alumina_dft2
  ! various runtypes (energy, geo_opt, etc.) available.
  PRINT_LEVEL MEDIUM
  RUN_TYPE CELL_OPT            
&END GLOBAL

&FORCE_EVAL
  ! the electronic structure part of CP2K is named Quickstep
  METHOD Quickstep
  STRESS_TENSOR ANALYTICAL

  &DFT
    ! basis sets and pseudopotential files can be found in cp2k/data
    BASIS_SET_FILE_NAME ./cp2k-data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME ./cp2k-data/GTH_POTENTIALS
    ! Charge and multiplicity
    CHARGE 0
    MULTIPLICITY 1

    &MGRID
      CUTOFF 1000
      REL_CUTOFF 70
    &END MGRID

    &QS
       ! use the GPW method (i.e. pseudopotential based calculations with the Gaussian and Plane Waves scheme).
       METHOD GPW 
       ! default threshold for numerics ~ roughly numerical accuracy of the total energy per electron,
       ! sets reasonable values for all other thresholds.
       EPS_DEFAULT 1.0E-12
       EXTRAPOLATION USE_PREV_P ! For MD use ASPC method
    &END QS

  !  # The number of k-points should be taken from 03_kpoint_conv
  !  &KPOINTS
  !     SCHEME MONKHORST-PACK 8 5 5
  !  &END KPOINTS

    &POISSON
       PERIODIC XYZ ! the default, gas phase systems should have 'NONE' and a wavelet solver
       POISSON_SOLVER PERIODIC
    &END

    &SCF
       EPS_SCF 1e-08
       MAX_SCF 200
       SCF_GUESS ATOMIC
       &MIXING
          ALPHA 0.3
          METHOD BROYDEN_MIXING
          NBUFFER 15
       &END MIXING
       &OT ON
        MINIMIZER CG ! DIIS can be used alternatively
       &END OT
       &OUTER_SCF ! repeat the inner SCF cycle 20 times
         MAX_SCF 20
         EPS_SCF 1.0E-8 ! must match the above
       &END
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC
  &END DFT

  &SUBSYS
    &CELL
      A 5.58700   0.00000   0.00000
      B 0.00000   8.41300   0.00000
      C -0.08308   0.00000   8.06757
      MULTIPLE_UNIT_CELL 2 2 2
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME alumina_unrlxd.xyz
      COORD_FILE_FORMAT XYZ
      MULTIPLE_UNIT_CELL 2 2 2
    &END
    &KIND Al
      BASIS_SET DZVP-MOLOPT-SR-GTH-q3
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND O
      BASIS_SET DZVP-MOLOPT-SR-GTH-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&MOTION
  &CELL_OPT
    OPTIMIZER BFGS
    MAX_FORCE 1.9E-5 # 1.0E-3 eV/A
    TYPE DIRECT_CELL_OPT
    &PRINT
      &CELL ON
      &END CELL
    &END PRINT
  &END
&END